#!/bin/sh

# Close the control channel to unblock llbuild
# Usage:
#   source ./close-control-fd ; echo foo
#   ./close-control-fd echo foo

if [ "${LLBUILD_CONTROL_FD}" -a "${LLBUILD_TASK_ID}" ]; then
  printf "llbuild.1\n${LLBUILD_TASK_ID}\n" >&${LLBUILD_CONTROL_FD}
  eval "exec ${LLBUILD_CONTROL_FD}>&-"
fi

if [ "$#" -ge 1 ]; then
    exec "$@"
fi
